@{
    ViewBag.Title = "Message Test";
}


<h2>Message Echo</h2>
<div class="container">
    You are @User.Identity.Name<br />
    Target UserID: <input type="text" id="userId"/><br/>
    <input type="text" id="colorIndex" />
    <input type="button" id="sendmessage" value="Send" /><br/>
    <input type="button" id="sendping" value="Send Ping" />
    <ul id="log"></ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var service = $.connection.colorMessageHub;
            // Create a function that the hub can call back to display messages.
            service.client.receiveColorIndex = function (colorIndex) {
                // Add the message to the page.
                $('#log').append('<li> recieving color index:' + htmlEncode(colorIndex) + '</li>');
            };
            service.client.receivePing = function () {
                // Add the message to the page.
                $('#log').append('<li> recieving ping! </li>');
            };
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    service.server.sendColorIndex($('#userId').val(), $('#colorIndex').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
                $('#sendping').click(function () {
                    // Call the Send method on the hub.
                    service.server.sendPing($('#userId').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
